// chapter 3 -- loops 

for(let i=0;i<5;i++){
    console.log(i);
}
console.log("Loop has ended");

// sum of 1 to 10
let sum = 0;
for(let i=1;i<=1000;i++){
   sum = sum+i;
}
console.log("sum of the first 10 natural numbers: ",sum);
console.log("Loop has ended");

console.log("for loop");

for(var i=0;i<8;i++){
    console.log(i);
}
console.log(i);

