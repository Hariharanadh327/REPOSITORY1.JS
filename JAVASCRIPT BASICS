// while loop
console.log("While loop");
{let i=1;
while(i<=5){
    console.log(i);
    i++;
}
}
// Do while loop
{
   console.log("do while loop");
let i=1;
do{
    console.log(i);
    i++;
} while(i<=5);
}
// for-of loop
console.log("for-of loop");
let Str = "Harinadh";
let length =0;
for(let ch of Str){
    console.log(ch);
    length = length+1;
}
console.log("Length of the Str: ",length);
//for-in loop
console.log("for-in loop");
{
    let Employee = {
        Name : "Harinadh",
        Age : 22,
        Role : "Developer",
        salary : 42000,
    };
    // key in object (Employee)
    for(let key in Employee){
      console.log("key: ",key);
    }
    // value in object(Employee)
    for(let value in Employee){
        console.log("value :",value);
    }
    // key, value in object(Employee)
    for(key in Employee){
        console.log("key: ",key,", value :",Employee[key]);
    }
}
//task using for loop
{
console.log("print all the even numbers in the range(1,100)");
let count=0;
  for(let i=0;i<=100;i++){
    if(i%2==0){
        console.log(i);
        count=count+1;
    }
  }
  console.log("count : ",count);
}

